    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug playground",
            "program": "${workspaceFolder}\\playground\\target\\debug\\playground.exe",
            "args": [],
            "cwd": "${workspaceFolder}\\playground",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "sourceLanguages": [
                "rust"
            ],
            "preLaunchTask": "Cargo build playground"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug lib tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=glsl-parser"
                ],
                "filter": {
                    "name": "glsl-parser",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}\\glsl-parser",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "sourceLanguages": [
                "rust"
            ]
        }
    ]
}