    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\target\\debug\\glsl-parser.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Cargo build",
            "stopAtEntry": false,
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                }
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug (Release)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\target\\release\\glsl-parser.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Cargo build release",
            "stopAtEntry": false,
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                }
            ],
            "console": "integratedTerminal"
        }
    ]
}