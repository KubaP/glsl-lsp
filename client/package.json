{
	"name": "glsl",
	"displayName": "GLSL",
	"description": "",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:glsl"
	],
	"main": "./out/main",
	"contributes": {
		"languages": [
			{
				"id": "glsl",
				"aliases": [
					"GLSL",
					"glsl"
				],
				"extensions": [
					".glsl",
					".vs",
					".vert",
					".vshader",
					".v.glsl",
					".gs",
					".geom",
					".gshader",
					".g.glsl",
					".fs",
					".frag",
					".fshader",
					".f.glsl"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "glsl_syntax_tree",
				"extensions": [
					".glsl.cst"
				]
			}
		],
		"grammars": [
			{
				"language": "glsl",
				"scopeName": "source.glsl",
				"path": "./syntaxes/glsl.tmLanguage.json"
			},
			{
				"language": "glsl_syntax_tree",
				"scopeName": "source.glsl_syntax_tree",
				"path": "./syntaxes/glsl.cst.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "glsl.syntaxTree",
				"title": "GLSL: Show syntax tree"
			}
		],
		"configuration": {
			"type": "object",
			"title": "GLSL",
			"properties": {
				"glsl.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -b",
		"watch": "tsc -b -w",
		"buildGrammar": "npx js-yaml syntaxes/glsl.tmLanguage.yaml > syntaxes/glsl.tmLanguage.json && npx js-yaml syntaxes/glsl.cst.tmLanguage.yaml > syntaxes/glsl.cst.tmLanguage.json"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.2"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.13.0",
		"js-yaml": "^4.1.0",
		"mocha": "^9.2.1",
		"typescript": "^4.7.2"
	}
}
